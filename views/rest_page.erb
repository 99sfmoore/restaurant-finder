
<h1><%= @restaurant.name %></h1> 
<div class="pull-right">
<div class="btn-group" >
  <a class="btn" href="/log-visit/<%= @restaurant.slug %>">log visit</a>  
  <a class="btn"href="/edit/<%=@restaurant.slug%>">edit</a>
</div>
</div>


<h4><%= @restaurant.address %>
  <br><%= @restaurant.cross_street %>
  <% if @restaurant.neighborhood %>
    <br><a href="/list_by/area/<%=@restaurant.area.slug%>"><%= @restaurant.neighborhood.area.name %></a> / <a href="/list_by/neighborhood/<%= @restaurant.neighborhood.slug %>"><%= @restaurant.neighborhood.name %></a>
  <%end%>
  <% @restaurant.cuisines.uniq.each do |cuisine| %>
    <br><a href="/list_by/cuisine/<%=cuisine.slug%>"><%=cuisine.name%></a>
    <%end%></h4>
  <h2>Appears in lists:</h2>
  <h4>
  <% @restaurant.sources.each do |source| %>
    <% if source.public? || @user.sources.include?(source) %>
    <a href="/list_by/source/<%=source.slug%>"><%= source.name %></a>
    <br>
    <% end %>
    <%end%>
  </h4>
  <h2> Notes</h2>
  <h4><%= @restaurant.display_note(@user) %></h4>
  <h1>Menu</h1>
  <%= @restaurant.get_menu %>



