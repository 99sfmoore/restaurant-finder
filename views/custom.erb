<h2>Custom Search:</h2>

<form action = "/custom" method = "post">
  <% @search_lists.each do |type, items| %>
  <h4>Choose <%=type%>:<h4>
    <div class="row">
      <% items.each_with_index do |item, index| %>
        <div class="span4">
          <label class="checkbox" for="selector"><input id="selector" type ="checkbox" name=<%="#{type}[#{item.id}]"%>><%=item.name%></label>
        </div>
      <%end%>
    </div>
      <% end %>
      <input type="submit" class="btn btn-primary" value="Search">
    </form>