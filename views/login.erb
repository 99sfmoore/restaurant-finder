<div class="row">
    <div class="span3 offset2">
        <h2>Log in</h2>

        <form action = "/login" method ="post"> 
            <label for="email">Email Address:</label>
            <input id="email" name="email" type="text" size = "10"><br>
            <label for="password">Password:</label> 
            <input id="password" name="password" type="password">
            <% if flash[:login_error] %>
            <p class="alert alert-error"><%= flash[:login_error]%></p>
            <% end %>
            <input type="submit" class="btn btn-primary btn-account" value="Login"/>
        </form>
    </div>

    <div class="span3 offset2">
        <h2>or Sign Up</h2>

        <form action = "/signup" method ="post"> 
            <label for="name">Name:</label>
            <input id="name" name="name" type="text" size = "10"><br>
            <label for="email">Email Address:</label>
            <input id="email" name="email" type="text" size = "10">
            <% if flash[:user_error] %>
            <p class="alert alert-error"><%= flash[:user_error]%></p>
            <% end %>
            <label for="password">Password:</label> 
            <input id="password" name="password" type="password">
            
            <label for="confirm">Confirm Password:</label> 
            <input id="confirm" name="confirm" type="password">
            <% if flash[:password_error] %>
                <p class="alert alert-error"><%= flash[:password_error]%></p>
            <% end %>

            <input type="submit" class="btn btn-primary btn-account" value="Sign Up"/>
        </form>
    </div>
</div>